.board-container {
    width: 100%;
    height: 100%;
    position: relative;
}
.board-container canvas {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}
.board-container canvas:nth-of-type(1) {
    z-index: 1;
}
.board-container canvas:nth-of-type(2) {
    z-index: 2;
}
.board-container canvas:nth-of-type(3) {
    z-index: 3;
}