.board-container {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
}

.board-container canvas {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.board-container canvas:nth-of-type(1) {
    z-index: 1;
}

.board-container canvas:nth-of-type(2) {
    z-index: 2;
}

.board-container canvas:nth-of-type(3) {
    z-index: 3;
}

.rubber-box {
    z-index: 999;
    position: absolute;
    background: rgba(170, 170, 170, 0.6);
    border: 1px dashed #eee;
    width: 0;
    height: 0;
    left: 0;
    top: 0;
}